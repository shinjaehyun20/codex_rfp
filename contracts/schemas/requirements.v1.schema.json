{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "schema_version",
    "state_id",
    "case_id",
    "items"
  ],
  "properties": {
    "type": {
      "const": "requirements.v1"
    },
    "schema_version": {
      "const": "v1"
    },
    "state_id": {
      "type": "string",
      "pattern": "^STATE-[A-Z0-9]{8}$"
    },
    "case_id": {
      "type": "string",
      "pattern": "^CASE-[A-Z0-9]{8}$"
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "requirement_id",
          "kind",
          "text",
          "source"
        ],
        "properties": {
          "requirement_id": {
            "type": "string",
            "pattern": "^REQ-[A-Z0-9]{8}$"
          },
          "kind": {
            "type": "string",
            "enum": [
              "mandatory",
              "bonus",
              "constraint",
              "submission"
            ]
          },
          "text": {
            "type": "string"
          },
          "source": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "artifact_id",
              "page",
              "block_id"
            ],
            "properties": {
              "artifact_id": {
                "type": "string",
                "pattern": "^ART-[A-Z0-9]{8}$"
              },
              "page": {
                "type": "integer"
              },
              "block_id": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}