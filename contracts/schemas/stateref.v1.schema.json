{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "schema_version",
    "state_id",
    "state_type",
    "uri",
    "sha256"
  ],
  "properties": {
    "type": {
      "const": "stateref.v1"
    },
    "schema_version": {
      "const": "v1"
    },
    "state_id": {
      "type": "string",
      "pattern": "^STATE-[A-Z0-9]{8}$"
    },
    "state_type": {
      "type": "string",
      "pattern": "^[a-z.]+\\.v1$"
    },
    "uri": {
      "type": "string",
      "pattern": "^s3://"
    },
    "sha256": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    }
  }
}