{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "type",
    "schema_version",
    "state_id",
    "case_id",
    "sections"
  ],
  "properties": {
    "type": {
      "const": "proposal.draft.v1"
    },
    "schema_version": {
      "const": "v1"
    },
    "state_id": {
      "type": "string",
      "pattern": "^STATE-[A-Z0-9]{8}$"
    },
    "case_id": {
      "type": "string",
      "pattern": "^CASE-[A-Z0-9]{8}$"
    },
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "section_id",
          "title",
          "content"
        ],
        "properties": {
          "section_id": {
            "type": "string",
            "pattern": "^SEC-[A-Z0-9]{8}$"
          },
          "title": {
            "type": "string"
          },
          "content": {
            "type": "string"
          }
        }
      }
    }
  }
}